<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<BorderPane fx:id="stage" xmlns="http://javafx.com/javafx/8.0.999-ea" xmlns:fx="http://javafx.com/fxml/1"
            minWidth="800" minHeight="600"
            fx:controller="pl.sda.javadub1.HomeController">

    <top>
        <MenuBar>
            <Menu text="File">
                <MenuItem text="Connect to server"/>
                <SeparatorMenuItem/>
                <MenuItem text="Exit"/>
            </Menu>

            <Menu text="Edit">
                <MenuItem text="Element 1"/>
                <MenuItem text="Element 2"/>
                <MenuItem text="Element 3"/>
            </Menu>
        </MenuBar>
    </top>

    <center>

        <VBox>
            <children>
                <Label fx:id="welcomeLabel" text="Moja aplikacja"/>
                <Button fx:id="primaryButton" onAction="#switchToSecondary" text="Przełącz na drugi widok"/>

                <Button text="Polacz z serwerem" onAction="#onClick"/>

            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
        </VBox>

    </center>


</BorderPane>
